{
  "env": {
    "browser": true,
    "es2021": true
    // "vitest": true
  },
  "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended", "plugin:tailwindcss/recommended", "eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier", "tailwindcss"],
  "rules": {
    "no-use-before-define": ["error", { "functions": false }],
    // "camelcase": "error",
    "block-scoped-var": "warn",
    // "complexity": ["warn", 10],
    // "max-depth": ["warn", 2],
    // "max-lines": ["warn", { "max": 120, "skipBlankLines": true }],
    // "max-params": ["warn", 3],
    "no-bitwise": "error",
    "no-eval": "error",
    "no-else-return": "error",
    "no-eq-null": "error",
    "eqeqeq": ["error", "always"],
    "no-lonely-if": "error",
    "no-negated-condition": "warn",
    "no-mixed-operators": "error",
    "no-nested-ternary": "error",
    "no-undefined": "error",
    "no-useless-rename": "error",
    "prefer-const": "error",
    "require-await": "error",
    "vars-on-top": "error",
    "tailwindcss/no-custom-classname": "off",
    "multiline-ternary": ["warn", "never"],
    "eol-last": ["error", "always"],
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "no-duplicate-imports": "error",
    // "import/max-dependencies": ["warn", { "max": 10, "ignoreTypeImports": false }],
    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"],
          ["internal", "parent", "sibling", "index"]
        ],
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "newlines-between": "always",
        "warnOnUnassignedImports": true
      }
    ]
  }
}
